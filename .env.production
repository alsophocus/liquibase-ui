# Production Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Jenkins Configuration
JENKINS_URL=https://jenkins.your-company.com
JENKINS_USERNAME=liquibase-user
JENKINS_TOKEN=your_jenkins_api_token

# Bitbucket Configuration
BITBUCKET_URL=https://api.bitbucket.org/2.0
BITBUCKET_USERNAME=your_bitbucket_username
BITBUCKET_APP_PASSWORD=your_bitbucket_app_password
BITBUCKET_WORKSPACE=your_workspace

# Database Configuration
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=your_database
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Production Database
PROD_DB_HOST=prod-db.your-company.com
PROD_DB_PORT=5432
PROD_DB_NAME=production_db

# Staging Database
STAGING_DB_HOST=staging-db.your-company.com
STAGING_DB_PORT=5432
STAGING_DB_NAME=staging_db

# Development Database
DEV_DB_HOST=dev-db.your-company.com
DEV_DB_PORT=5432
DEV_DB_NAME=development_db

# Liquibase Configuration
LIQUIBASE_PATH=/usr/local/bin/liquibase
LIQUIBASE_CHANGELOG_PATH=db/changelog/db.changelog-master.xml
LIQUIBASE_CONTEXTS=prod

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
EMAIL_SMTP_HOST=smtp.your-company.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=notifications@your-company.com
EMAIL_PASSWORD=your_email_password
